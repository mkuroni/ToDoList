<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300"
             x:Class="ToDoList.Views.AddItemView">
	<DockPanel>
		<Button DockPanel.Dock="Bottom" Content="Cancel" Command="{Binding Cancel}"/>
		<Button DockPanel.Dock="Bottom" Content="Ok" Command="{Binding Ok}"/>
		<TextBox AcceptsReturn="False" Text="{Binding Description}" Watermark="Entrez votre TODO"/>
	</DockPanel>
</UserControl>
